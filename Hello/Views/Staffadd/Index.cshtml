                                            <option>Morang</option>
                                            <option>Lumbini</option>
                                            <option>Karnali</option>
                                            <option>Sudurpashchim</option>
                                        </select>
                                    </div>
                                </div>
                            </div>



                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">city Name</label>
                                    <div class="col-sm-9">
                                        <input type="text" name="cityname" class="form-control" />
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Street Name</label>
                                    <div class="col-sm-9">
                                        <input type="text" name="streetname" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>



                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Postal Code</label>
                                    <div class="col-sm-9">
                                        <input type="text" name="postalcode" class="form-control" />
                                    </div>
                                </div>
                            </div>

                        </div>

                        <!-- added -->

                        <h4 class="card-title">Account Information</h4>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Email Address</label>
                                    <div class="col-sm-9">
                                        <input type="text" name="email" class="form-control" />
                                    </div>
